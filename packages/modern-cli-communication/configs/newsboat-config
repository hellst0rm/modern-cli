# Newsboat RSS Reader Configuration
# ~/.config/newsboat/config

# Basic settings
auto-reload yes
reload-time 60
reload-threads 4
download-retries 2
download-timeout 10

# Display
show-read-feeds no
show-read-articles no
feed-sort-order unreadarticlecount-asc

# Browser
browser "w3m %u"
macro v set browser "mpv %u" ; open-in-browser ; set browser "w3m %u"

# Colors (Catppuccin theme)
color background          color15 color0
color listnormal          color15 color0
color listfocus           color0  color3
color listnormal_unread   color2  color0
color listfocus_unread    color0  color2
color info                color4  color0
color article             color15 color0

# Key bindings
bind-key j down
bind-key k up
bind-key j next articlelist
bind-key k prev articlelist
bind-key J next-feed articlelist
bind-key K prev-feed articlelist
bind-key G end
bind-key g home
bind-key d pagedown
bind-key u pageup
bind-key l open
bind-key h quit
bind-key a toggle-article-read
bind-key n next-unread
bind-key N prev-unread
bind-key D pb-download
bind-key U show-urls
bind-key x pb-delete