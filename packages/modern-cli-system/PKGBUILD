pkgname=modern-cli-system
pkgver=1.0.0
pkgrel=1
pkgdesc="System monitoring and management tools for modern CLI"
arch=('any')
url="https://hellst0rm.github.io/modern-cli"
license=('MIT')

depends=(
    'modern-cli-core'
    
    # System monitoring
    'procs'
    'dust'
    'bottom'
    'duf'
    'bandwhich'
    
    # Performance analysis
    'hyperfine'
    'tokei'
    
    # Process management
    'broot'
)

source=(
    "bottom-config.toml"
)

md5sums=('SKIP')

package() {
    # Install system monitoring configs
    install -dm755 "$pkgdir/usr/lib/modern-cli/configs"
    install -Dm644 "$srcdir/bottom-config.toml" "$pkgdir/usr/lib/modern-cli/configs/bottom-config.toml"
}